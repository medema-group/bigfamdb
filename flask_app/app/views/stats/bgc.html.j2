<div class="row mt-2 mb-4">
	<div class="col">
		<h3 name="input_data">Biosynthetic Gene Clusters (BGCs)</h3>
		<!-- first row -->
		<div class="row mt-4 list-group list-group-horizontal">
			<div class="col-1"></div>
			<div class="col-10 align-items-center">
				<table id="table_datasets" class="table table-striped table-bordered table-hover nowrap">
					<thead class="thead-light">
						<tr>
							<th class="text-center">dataset</th>
							<th class="text-center">total genomes</th>
							<th class="text-center">total BGCs</th>
							<th class="text-center">description</th>
						</tr>
					</thead>
					<tbody class="tbody">
					</tbody>
				</table>
			</div>
			<div class="col-1"></div>
		</div>
		<!-- second row -->
		<div class="row mt-4">
			<!-- bgc class stacked barplot -->
			<div class="col-6" style="min-width: 480px;">
				<div id="dist_bgc_class" class="text-center">
					<div class="spinner-border text-info" role="status">
						<span class="sr-only">Loading...</span>
					</div>
				</div>
			</div>
			<!-- bgc phylum stacked barplot -->
			<div class="col-6" style="min-width: 480px;">
				<div id="dist_bgc_phylum" class="text-center">
					<div class="spinner-border text-info" role="status">
						<span class="sr-only">Loading...</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$("#table_datasets").DataTable({
			searching: false,
			ordering:  false,
			serverSide: true,
			responsive: false,
			paging: false,
			ajax: {
				url: "{{ url_for('root.page') }}api/stats/get_dataset_table",
				type: "GET"
			},
			columnDefs: [
				{ className: "text-right", "targets": [1, 2] }
			]
		});
	});
</script>